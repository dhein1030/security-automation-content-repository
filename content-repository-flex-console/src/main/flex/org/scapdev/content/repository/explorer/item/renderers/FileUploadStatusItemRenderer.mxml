<?xml version="1.0" encoding="utf-8"?>
<s:ItemRenderer xmlns:fx="http://ns.adobe.com/mxml/2009" 
				xmlns:s="library://ns.adobe.com/flex/spark" 
				xmlns:mx="library://ns.adobe.com/flex/mx" 
				autoDrawBackground="true">
	<s:layout>
		<s:HorizontalLayout/>
	</s:layout>
	<fx:Script>
		<![CDATA[
			import org.scapdev.content.repository.explorer.FileUploadStatus;
			override public function set data(value:Object):void { 
				super.data = value; 
				if (value == null) 
					return; 
				
				var file:FileUploadStatus = value as FileUploadStatus;
				
				lblFilename.text = file.getFilename();
				
				if(file.getErrorText() != null)
				{
					lblFilename.setStyle("color", "red");
					lblFilename.toolTip = file.getErrorText();
				}
				else
				{
					lblFilename.setStyle("color", "green");
					var ttip:String = "entities/relationships processed: " +
						file.getEntitiesProcessed() + "/" + file.getRelationshipsProcessed();
					lblFilename.toolTip = ttip;
				}
			} 
			
		]]>
	</fx:Script>
	<s:Group>
		<s:layout>
			<s:HorizontalLayout gap="2" verticalAlign="justify" paddingLeft="2" paddingRight="2" paddingBottom="1"/>
		</s:layout>
		<s:Label id="lblFilename" textAlign="left" verticalAlign="middle"/>
	</s:Group>
	
</s:ItemRenderer>
