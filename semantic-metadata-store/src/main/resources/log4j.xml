<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">

<!-- This is the configuration for LOG4J -->

<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">

  <!-- ========[APPENDERS]======== -->

  <!-- 
         writes log messages to the console. It outputs file name,
         method name and line number of the caller. This is slow,
         so just use it for debugging. 
    -->
  <appender name="console" class="org.apache.log4j.ConsoleAppender">
    <layout class="org.apache.log4j.PatternLayout">
      <param name="ConversionPattern" value="%d{DATE} [%t] %-5p (%F [%M]:%L) - %m %n"/>
    </layout>
  </appender>

  <!-- 
         the following appenders write to files  
    -->
  <appender name="statements" class="org.apache.log4j.RollingFileAppender">
    <param name="File" value="statements.log"/>
    <param name="MaxFileSize" value="20MB"/>
    <param name="MaxBackupIndex" value="3"/>
    <param name="Encoding" value="UTF-8"/>
    <layout class="org.apache.log4j.PatternLayout">
      <param name="ConversionPattern" value="%m %n"/>
    </layout>
  </appender>


  <logger name="org.scapdev.content.core.aspectj" additivity="false">
    <level value="TRACE"/>
    <appender-ref ref="statements"/>
  </logger>

  <!-- ========[ROOT logger]======== -->
  <root>
    <priority value="info"/>
    <appender-ref ref="console"/>
  </root>

</log4j:configuration>
